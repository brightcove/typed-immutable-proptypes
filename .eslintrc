{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "semi": ["error", "always"],
    "no-var": "error",
    "prefer-const": "error",
    "indent": ["error", 2],
    "curly": ["error", "all"],
    "comma-dangle": ["error", "always-multiline"],
    "brace-style": "error",
    "eqeqeq": ["error", "always", {
      "null": "ignore"
    }],
    "no-multi-spaces": "error"
  }
}